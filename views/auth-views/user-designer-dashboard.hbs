<h1>oevnzeiovzeobv</h1>

			<a class="btn btn-success mb-2" href="/furnitures/add" role="button">Add furniture</a>
		
   <h2>Filterable List</h2>
	<p>Type something in the input field to search the list for specific items:</p>
  
  <br>
<table id="example" class="table table-striped table-bordered " cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm">Role
      </th>
      
    </tr>
  </thead>
  
  <tbody id="myTable">
    {{#each furnitureArray}}
    <tr><td>
		<div class="col-sm-4 p-0 border-right border-bottom">
			<div class="py-3 rounded-0 m-2">
				<a href="/furnitures/{{this._id}}" class="">
					<img class="card-img-top" src="{{this.pictures}}" alt="Card image cap"
						style="height: 200px; width: 100%; display: block;">
				</a>
				<div class="card-body">
					<h5 class="card-title"> {{this.name}} </h5>
					<p class="card-text">${{this.stdPrice}}.00</p>
					<p class="card-text"> {{truncate this.description 140}}</p>
					<a href="/furnitures/{{this._id}}" class="btn btn-primary">See </a>
				</div>
			</div>
		</div>
    </td></tr>
		{{/each}}
    
  </tbody>
  
  <tfoot>
    <tr>
      <th>Role
      </th>
      
    </tr>
  </tfoot>
</table>


   
<script>
  $(document).ready(function() {
    $('#example').DataTable( {
        "lengthMenu": [[4, 8, 15, -1], [4, 8, 15, "All"]]
    } );
} );
</script>
