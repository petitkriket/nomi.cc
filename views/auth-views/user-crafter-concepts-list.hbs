<div class="col-md-12">
	<div class="row">
		<div class="col-sm-12 mb-2 border-bottom">
			<p class="lead">
				Here is a list of project pending for a place to be built.

			</p> {{!-- <a class="btn btn-success mb-2" href="/furnitures/add" role="button">Add furniture</a> --}}
		</div>
	</div>
	<div class="row">
		{{#each furnitureArray}}
		<div class="col-sm-4">
			<div class="card">
				<img class="card-img-top" src="{{this.pictures.url.[1]}}" alt="Card image cap"
					style="height: 200px; width: 100%; display: block;">
				<div class="card-body">
					<h5 class="card-title"> {{this.name}} </h5>
					<p class="card-text text-uppercase">by {{this.creator.name}}</p>
					<p class="card-text"> {{this.description}}</p>
					<a href="/furnitures/{{this._id}}/quote" class="btn btn-primary">Find out more </a>
				</div>
			</div>
		</div>
		{{/each}}

	</div>