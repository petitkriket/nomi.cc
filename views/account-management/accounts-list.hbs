<div class="d-flex justify-content-end">
	<div class="row">
		<a class="btn btn-success ml-1=" href="/workshops/add" role="button">Add workshop</a>
		<a class="btn btn-success ml-2" href="/furnitures/add" role="button">Add furniture</a>
	</div>
</div>

<h2>Users acounts</h2>
<table id="userTable" class="table table-striped table-bordered " cellspacing="0" width="100%">
	<thead>
		<tr>
			<th class="th-sm">Role
			</th>
			<th class="th-sm">Company Name
			</th>
			<th class="th-sm">User name
			</th>
			<th class="th-sm">User surname
			</th>
			<th class="th-sm">Email
			</th>
			<th class="th-sm">Phone mumber
			</th>
			<th class="th-sm">City base
			</th>
			<th class="th-sm">Edit
			</th>
			<th class="th-sm">Delete
			</th>
		</tr>
	</thead>

	<tbody id="myTable">
		{{#each userArray}}
		<tr>
			<td>{{this.role}}</td>
			<td>{{this.company}}</td>
			<td>{{this.name}}</td>
			<td>{{this.surname}}</td>
			<td>{{this.email}}</td>
			<td>{{this.phoneNum}}</td>
			<td>{{this.city}}</td>
			<td><a href="/user/{{this._id}}/edit" class="btn btn-primary btn-xs"><i class="fa fa-pencil"
						aria-hidden="true"></i></a></td>
			<td>
				<p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs"
						data-title="Delete" data-toggle="modal" data-target="#delete"><i class="fa fa-trash"
							aria-hidden="true"></i></button></p>
			</td>
		</tr>
		{{/each}}
	</tbody>

	<tfoot>
		<tr>
			<th>Role
			</th>
			<th>Company Name
			</th>
			<th>User name
			</th>
			<th>User surname
			</th>
			<th>Email
			</th>
			<th>Phone mumber
			</th>
			<th>City base
			</th>
			<th>Edit
			</th>
			<th>Delete
			</th>
		</tr>
	</tfoot>
</table>